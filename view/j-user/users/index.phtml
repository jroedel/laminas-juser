        if (count($user['roles']) == 0) {
            echo $this->translate('none');
        } else {
            echo $this->escapeHtml(implode(', ', $user['roles']));
        }} ?></td>
	<td><?php if ($user['personId'] &&
			!is_null($this->persons) &&
			isset($this->persons[$user['personId']])) {
